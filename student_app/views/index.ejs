<% include ('header') %> //include header element

<% if (entries.length) { %>
    <% entries.forEach(function(entry)) { %> //if entry exists display element for each entry included

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="text-muted pull-right> //display in html element
            <%= entry.published %>
        <div>
            <%= entry.title %>
    </div>
    <div class="panel-body">
        <%= entry.body %>
    </div>
</div>

<%}) %>
<% } else { %> No entries! <a href="/new-entry">Add the information</a> //if there is no entry, redirect to new entry
<% } %>
<% include ('footer') %>